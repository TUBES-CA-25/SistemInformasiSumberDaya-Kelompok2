<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /SistemInformasiSumberDaya-Kelompok2/
    
    # If it's a real file or directory, don't rewrite
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    
    # Rewrite everything else to public/index.php with route parameter
    RewriteRule ^(.*)$ public/index.php?route=$1 [QSA,L]
</IfModule>
